extends layout

block content
  h1.
    Create new game
  form(id='createGame' action='create')
    input(name="name", placeholder="Name of game...")
    textarea(name="secret")
    select(name="parties")
      for item in [2,3,4,5,6,7,8,9,10]
        option #{item}
    select(name="threshold")
      for item in [2,3,4,5,6,7,8,9,10]
        option #{item}