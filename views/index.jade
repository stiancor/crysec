extends layout

block content
 div(class="header clearfix")
   div.jumbotron
    block content
      img(src='/images/1020px-CIA.svg.png'  height="300" width="300" class="login_logo")
      p
        | RESTRICTED ACCESS 
        span.dark_gold. 
          PROPERTY OF THE CIA
      p.access_text.
        SCAN VALID ACCESS TOKENS TO LOG IN
      div(class="progress spacing-top" id="progressBar")
        div(class="progress-bar progress-bar-info progress-bar-striped active" role="progressbar" aria-valuenow="#{percent}" aria-valuemin="0" aria-valuemax="100" style="width: #{percent}%")
          span(class="sr-only").
            35% Complete
      form(id="tokenForm" action="/verify") 
        input(name="uuidCode" type="hidden" id="uuidField" value='' + id)
        input(name="token" type="hidden" id="tokenField") 
  
      
  
